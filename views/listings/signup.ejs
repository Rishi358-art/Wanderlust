<% layout('layouts/boilerplate') %>
<div class="row mt-3">
   <div class="col-12 col-md-6 offset-md-3">

        <h2 class="mb-4">SignUp for WanderLust</h2>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" placeholder="Enter Username" class="form-control" type="text" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" placeholder="Enter Email" class="form-control" type="text" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" placeholder="Enter Password" class="form-control" type="text" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>