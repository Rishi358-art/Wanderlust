<% layout('layouts/boilerplate') %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
  <% for (let listing of allListings) { %>
    <div class="col mt-3">
      <a href="/listing/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <img src="<%= listing.image?.url || 'https://via.placeholder.com/300' %>" class="card-img-top" style="height:20rem;">
          <div class="card-body">
            <b><p><%= listing.title %></p></b>
            <p>
              &#8377 <%= listing.price.toLocaleString("en-IN") %>/Night
              <i class="tax-info">+ 18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
